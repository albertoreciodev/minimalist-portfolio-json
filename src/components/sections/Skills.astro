---
import Section from "@/components/Section.astro";

import { skills } from "@cv";
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  li {
    border-radius: 6px;
    background: #272727;
    color: #fff;
    font-size: 0.8rem;
    font-weight: 600;
    padding: 0.2rem 0.6rem;
  }

  li:hover {
    background: #707070;
  }
</style>
