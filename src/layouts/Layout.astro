---
import { basics } from "@cv";
interface Props {
  title: string;
}

const { title } = Astro.props;

const { image, summary, url, label, profiles } = basics;

const xInfo = profiles.find(({ network }) => network === "X");
const xUrl = xInfo?.url;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="theme-color" content="#EEE" />

    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=5"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <link rel="preload" as="image" href={image} />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />

    <!-- PROTOCOL OPEN GRAPH FACEBOOK -->
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} - ${label}`} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content="Photo of my profile" />

    <!-- CARDS MARKUP TAG REFERENCE TWITTER -->
    <meta name="twitter:title" content={`${title} - ${label}`} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:url" content={xUrl} />
    <meta name="twitter:image:src" content={image} />
    <meta
      name="twitter:image:alt"
      content="Fotografia de mi perfil - Programador freelance Girona y Barcelona | Frontend, Accesibilidad, Rendimiento Web, Maquetación, Figma, Diseño, UX/UI"
    />
    <meta name="twitter:creator" content="@albertoreciodev" />
    <meta name="twitter:site" content="@albertoreciodev" />

    <meta property="twitter:domain" content={url.split("//")[1] ?? ""} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background-color: #fff;
    letter-spacing: -0.025rem;
  }
  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #777;
    font-size: 0.85rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
    margin-top: 4px;
  }
</style>
